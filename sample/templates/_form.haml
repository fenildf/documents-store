%form{:action => action, :method => :post}
  %input{:type => :hidden, :name => :_method, :value => method}

  .title
    %input{:type => :text, :name => "#{model_name}[title]", :placeholder => :title, :value => model.title}

  .content
    %textarea{:type => :text, :name => "#{model_name}[content]", :placeholder => :content}
      = model.content

  %input{:type => :submit, :name => :submit, :value => :"提交"}
